{
	"compilerOptions": {
		"outDir": "./build/",
		"sourceMap": true,
		"noImplicitAny": true,
		"module": "es6",
		"target": "ES6",
		"jsx": "react-jsx",
		"allowJs": true,
		"moduleResolution": "node",
		"strict": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"lib": ["es5", "es6", "dom", "dom.iterable"]
	},
	"include": ["src", "./declaration.d.ts"]
}
